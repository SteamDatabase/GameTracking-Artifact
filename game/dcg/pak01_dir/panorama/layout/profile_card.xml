					</Panel>
				</Panel>

				<Panel id="CardMain">
					<Panel id="CardLoading">
						<Panel class="Spinner" />
					</Panel>

					<Panel id="CardContents">
					</Panel>
				</Panel>
			</Panel>
			<Image id="ProfileCardImage" src="s2r://panorama/images/dashboard/leftbar/temp_profile_card_image_png.vtex" />
		</Panel>
	</DCGProfileCard>
