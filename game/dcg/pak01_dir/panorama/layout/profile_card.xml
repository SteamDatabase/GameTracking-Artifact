	</styles>

	<DCGProfileCard>
		<Panel id="MiniProfileContainer">
			<Panel id="ContentsMain">
				<Panel id="CardHeader">
					<DCGAvatarImage id="AvatarImage" />	
					<Panel class="ProfileTextDetails">
						<Panel class="LeftRightFlow">
							<DCGUserName id="UserName" />
						</Panel>
						<Panel class="LeftRightFlow">
							<DCGUserName id="UserNickname" />
							<DCGUserRichPresence id="UserRichPresence" />
