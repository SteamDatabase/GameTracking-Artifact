<root>
	<styles>
		<include src="s2r://panorama/styles/dialog.vcss_c" />
	</styles>

	<Panel>
		<Panel class="TitleBar">
			<Label id="TitleBarText" text="Collection Simulator options"/>
		</Panel>
		<Panel class="MainArea">
			<Label id="MainAreaText" text="Pick a random seed and a number of packs to open"/>
		</Panel>
		<Panel class="ControlArea">

			<Label text="Seed:"/>
			<TextEntry id="SeedInput" />
			<Label text="Packs:" />
			<TextEntry id="PackCountInput" />
			<Button class="DialogButton" id="SubmitButton" onactivate="OpenDeckEditor()" >
				<Label text="    Build"/>
			</Button>
		</Panel>
	</Panel>
</root>
