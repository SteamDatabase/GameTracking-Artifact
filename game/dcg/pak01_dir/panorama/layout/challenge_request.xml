<root>
	<styles>
		<include src="s2r://panorama/styles/dialog.vcss_c" />
	</styles>
		
	<Panel>
		<Panel class="TitleBar">
			<Label id="TitleBarText" text="Challenge Requested"/>
		</Panel>
		<Panel class="MainArea">
			<Label id="MainAreaText" text="A friend wants to duel you."/>
		</Panel>
		<Panel class="ControlArea">
			<Button class="DialogButton" onactivate="AcceptChallenge()">
				<Label text="Accept"/>
			</Button>
			<Button class="DialogButton" onactivate="DenyChallenge()">
				<Label text="Deny"/>
			</Button>
		</Panel>
	</Panel>
</root>