<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/deck_info.vcss_c" />
	</styles>

	<Panel class="RootPanel">

		<Panel id="DeckInfoCardsPanel">
      
			<Panel id="HeroCards" class="CardCategory" >
        <Panel class="CategoryHeader">
          <Label id="HeroCardsTitle" class="CardSectionTitle" text="#DCG_DeckInfo_HeroesTitle" />
          <Panel class="SortButtonsGroup">
            <Button class="SortIconButton" id="SortHeroesRarity" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_SortRarity )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckInfoSortColumn('Heroes','Rarity');"/>
            <Button class="SortIconButton" id="SortHeroesColor" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_SortColor )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckInfoSortColumn('Heroes','Color');"/>
            <Button class="SortIconButton" id="SortHeroesHeroTurn" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_SortHeroTurn )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckInfoSortColumn('Heroes','HeroTurn');"/>
          </Panel>
        </Panel>
        <Panel class="HeroDisplay">
          <Panel class="HeroPortrait" id="HeroPanel1_0" >
            <Image class="HeroImage" id="HeroImage1_0" />
            <Panel class="HeroColor"/>
          </Panel>
          <Panel class="HeroPortrait" id="HeroPanel1_1" >
            <Image class="HeroImage" id="HeroImage1_1" />
            <Panel class="HeroColor"/>
          </Panel>
          <Panel class="HeroPortrait" id="HeroPanel1_2" >
            <Image class="HeroImage" id="HeroImage1_2" />
            <Panel class="HeroColor"/>
          </Panel>
          <Panel class="HeroPortrait" id="HeroPanel2_0" >
            <Image class="HeroImage" id="HeroImage2_0" />
            <Panel class="HeroColor"/>
          </Panel>
          <Panel class="HeroPortrait" id="HeroPanel3_0" >
            <Image class="HeroImage" id="HeroImage3_0" />
            <Panel class="HeroColor"/>
          </Panel>
        </Panel>
        <Panel class="CardsList" id="HeroCardsList">
          <!-- Dynamic contents -->
        </Panel>
        <Panel class="CardGraphs">
          <Panel id="CardColorHistogram">
            <!-- Dynamic contents -->
          </Panel>
          <Panel id="CardColorDistribution">
            <!-- Dynamic contents -->
          </Panel>
          <Label class="CardsOwnedLabel" text="#DCG_DeckInfo_CardsOwned" />
        </Panel>
			</Panel>

      <Panel class="CategorySeparator">
        <Panel class="CategorySeparatorBar" />
      </Panel>

      <Panel id="ItemCards" class="CardCategory" >
        <Panel class="CategoryHeader">
          <Label id="ItemCardsTitle" class="CardSectionTitle" text="#DCG_DeckInfo_ItemsTitle" />
          <Panel class="SortButtonsGroup">
            <Button class="SortIconButton" id="SortItemsRarity" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_SortRarity )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckInfoSortColumn('Items','Rarity');"/>
            <Button class="SortIconButton" id="SortItemsType" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_SortType )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckInfoSortColumn('Items','CardType');"/>
            <Button class="SortIconButton" id="SortItemsCost" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_SortGold )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckInfoSortColumn('Items','Cost');"/>
          </Panel>  
        </Panel>
        <Panel class="CardsList" id="ItemCardsList">
          <!-- Dynamic contents -->
        </Panel>
        <Panel class="ButtonControls">
          <Button class="GeneralButton" id="SampleHandButton" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_SampleHand )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckSampleHand();"/>
          <Button class="GeneralButton" id="CopyCodeButton" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_CopyDeckCode )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckCopyDeckCode();"/>
          <Button class="GeneralButton" id="CopyTextButton" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_CopyDeckText )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckCopyDeckText();"/>
          <Button class="GeneralButton" id="OpenDeckBuilder" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_OpenDeckBuilder )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckInfoOpenInDeckBuilder();"/>
          <Button class="GeneralButton" id="PurchaseUnownedButton" onmouseover="UIShowTextTooltip( #DCG_DeckBuilder_PurchaseUnowned )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckPurchaseUnowned();"/>
        </Panel>
      </Panel>

      <Panel class="CategorySeparator">
        <Panel class="CategorySeparatorBar" />
      </Panel>
      
      <Panel id="OtherCards" class="CardCategory" >
        <Panel class="CategoryHeader">
          <Label id="OtherCardsTitle" class="CardSectionTitle" text="#DCG_DeckInfo_OtherTitle" />
          <Panel class="SortButtonsGroup">
            <Button class="SortIconButton" id="SortOtherRarity" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_SortRarity )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckInfoSortColumn('Other','Rarity');"/>
            <Button class="SortIconButton" id="SortOtherColor" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_SortColor )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckInfoSortColumn('Other','Color');"/>
            <Button class="SortIconButton" id="SortOtherType" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_SortType )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckInfoSortColumn('Other','CardType');"/>
             <Button class="SortIconButton" id="SortOtherMana" onmouseover="UIShowTextTooltip( #DCG_DeckInfo_Tooltip_SortMana )" onmouseout="UIHideTextTooltip()" onactivate="DCGDeckInfoSortColumn('Other','Cost');"/>
         </Panel>
        </Panel>
        <Panel class="CardsList" id="OtherCardsList">
          <!-- Dynamic contents -->
        </Panel>
      </Panel>
			
		</Panel>
	</Panel>
</root>
