<root>
	<styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_load_deck_carousel_select.vcss_c" />
 </styles>
		
	<PopupLoadDeckCarouselSelect class="PopupLoadDeck">
		<Panel id="SelectionContainer">
			<Button id="MatchmakingSelect3" class="SelectButtonContainer"  disabled="true" >
				<Label id="GauntletSelectLabel" class="SelectLabel Disabled" text="#DCG_LoadDeckSelect_Gauntlet" />
			</Button>
			<Button id="MatchmakingSelect2" class="SelectButtonContainer" onactivate="DCGSelectMatchmakingType( 2 )">
				<Label id="FriendSelectLabel" class="SelectLabel" text="#DCG_LoadDeckSelect_Friend" disabled="true"/>
			</Button>
			<Button id="MatchmakingSelect1" class="SelectButtonContainer" onactivate="DCGSelectMatchmakingType( 1 )">
				<Label id="MatchmakingSelectLabel" class="SelectLabel" text="#DCG_LoadDeckSelect_MatchMaking" />
			</Button>
			<Button id="MatchmakingSelect0" class="SelectButtonContainer" onactivate="DCGSelectMatchmakingType( 0 )" selected="true">
				<Label id="AISelectLabel" class="SelectLabel" text="#DCG_LoadDeckSelect_AI" />
			</Button>
		</Panel>
		<Label id="AboutMatchmakingType" text="{s:about_matchmaking}" />
		<Panel id="ButtonContainer" />
	</PopupLoadDeckCarouselSelect>
</root>
