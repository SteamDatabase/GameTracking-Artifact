<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_marketplace_restriction.vcss_c" />
	</styles>

	<PopupMarketplaceRestriction class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">
		<Panel class="MainBody">
			<Label class="PopupTitleLeft" text="{s:title}" />
			<Label class="PopupSubtitle" text="{s:subtitle}" />
			<Panel id="Reasons" class="PopupDialogListContainer"/>
			<Label class="Link" html="true" text="#DCG_Marketplace_Restriction_More_Info" />
		</Panel>
		<Panel class="PopupBottomContainer">
			<Button class="PopupButton" id="OKButton" onactivate="UIPopupButtonClicked()">
				<Label text="#OK"/>
			</Button>
		</Panel>
	</PopupMarketplaceRestriction>
</root>
