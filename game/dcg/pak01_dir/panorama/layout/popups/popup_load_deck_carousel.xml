<root>
	<styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_load_deck_carousel.vcss_c" />
 </styles>
	
	<PopupLoadDeckCarousel class="PopupPanel Hidden" oncancel="UIPopupButtonClicked()">
		<Panel id="LoadDeckHeader">
			<Button class="MainMenuButton" onactivate="DCGCloseCurrentPopup()" >
				<Panel id="MainMenuImage" />
				<Label id="MainMenuLabel" text="#DCG_Escape_Main_Menu" />
			</Button>
			<Panel id="TitleContainer">
				<Label id="LoadDeckTitle" text="{s:loadDeckTitle}" />
				<Label id="SelectOpponentText" text="{s:selectOpponentText}" />
			</Panel>
		</Panel>
		<Panel id="TopBackgroundOpacity" />
		<Panel id="LeftBackgroundOpacity" />
		<Panel id="BottomBackgroundOpacity" />
		<Panel id="RightBackgroundOpacity" />
		<Panel id="CenterBackgroundOpacity" />
		<Panel id="TopBackgroundBlur" />
		<Panel id="LeftBackgroundBlur" acceptsinput="true" />
		<Panel id="BottomBackgroundBlur" />
		<Panel id="RightBackgroundBlur" acceptsinput="true" />
		<Panel id="CenterBackgroundBlur" acceptsinput="true" />
		<Panel id="ForegroundContainer">
			<Panel id="LoadDeckCarouselContainer" />
		</Panel>
	</PopupLoadDeckCarousel>
</root>
