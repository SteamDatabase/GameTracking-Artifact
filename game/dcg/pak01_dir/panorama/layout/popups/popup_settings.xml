<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_settings.vcss_c" />
	</styles>

	<PopupSettings class="Hidden" popupbackground="dim" oncancel="DCGSettings()">
		
		<!-- Nav Bar -->
		<Panel id="SettingsNavBar">
			<Button id="DCGCloseSettingsButton" class="ControlIconButton" onactivate="DCGSettings();" />

      <RadioButton id="HotkeysTabButton"	class="SettingsNavBarButton" group="SettingsTopMenu" onactivate="DCGSettingsSetActiveTab(0);">
        <Label text="#DCG_Settings_Hotkeys"/>
      </RadioButton>

      <Label class="SettingsTabSeparator"	text="/" />
      
      <RadioButton id="OptionsTabButton"	class="SettingsNavBarButton" group="SettingsTopMenu" onactivate="DCGSettingsSetActiveTab(1);">
				<Label text="#DCG_Settings_Options"/>
			</RadioButton>

      <Label class="SettingsTabSeparator"	text="/" />

      <RadioButton id="VideoTabButton" class="SettingsNavBarButton" group="SettingsTopMenu" onactivate="DCGSettingsSetActiveTab(2);" >
				<Label text="#DCG_Settings_Video" />
			</RadioButton>
		
			<Label class="SettingsTabSeparator" text="/" />
		
			<RadioButton id="AudioTabButton"	class="SettingsNavBarButton" group="SettingsTopMenu" onactivate="DCGSettingsSetActiveTab(3);" >
				<Label text="#DCG_Settings_Audio" />
			</RadioButton>
		</Panel>

		<Panel id="ContentContainerPanel" />
		
	</PopupSettings>
</root>
