<root>
	<styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_currency_purchase.vcss_c" />
 </styles>

	<Panel class="PopupPanel Hidden" popupbackground="dim">
    <Label id="TitleLabel" class="PopupTitle" text="" />

    <Panel id="PurchasePreview">
      <!-- Dynamic Content -->
    </Panel>

    <Panel class="PurchaseRow">
      <Label class="PurchaseLabel" text="#DCG_CurrencyPurchase_Cost"/>
      <Label class="PurchasePrice" text="{g:dcg_item_price:itemPrice}"/>
    </Panel>

    <Panel class="PurchaseRow">
      <Label class="PurchaseLabel" text="#DCG_CurrencyPurchase_Available"/>
      <DCGPlayerCurrency id="CurrentBalance"/>
    </Panel>    

    <Panel id="ButtonContainer" class="PopupButtonRow">
			<Button class="ButtonDark" id="CancelButton" onactivate="UIPopupButtonClicked()">
				<Label text="#Cancel"/>
			</Button>
      <Button class="ButtonDark" id="SubmitButton" onactivate="UIPopupButtonClickedEvent( DCGCurrencyPurchaseConfirmed() )">
        <Label text="#DCG_CurrencyPurchase_Purchase"/>
      </Button>
		</Panel>
    
	</Panel>
</root>
