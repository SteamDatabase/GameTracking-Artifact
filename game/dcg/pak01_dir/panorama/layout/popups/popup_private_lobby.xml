<root>
	<styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_private_lobby.vcss_c" />
  </styles>

  <Panel class="LobbyPage" hittest="true">
    
    <Panel id="MainDialog">
      <Panel id="Title">
        <Label class="PrivateLobbyTitle" text="#DCG_PrivateLobby_Title"/>
      </Panel>
      <Panel id="MainBody">
        <Panel class="BodyColumn">
          <Label class="ColumnHeader" text="#DCG_PrivateLobby_Players"/>
        
          <Panel id="Player1Controls" class="PlayerControls">
            <Panel id="Player1Slot" class="PlayerList"/>
            <Panel class="PlayerButtons">
              <Panel id="Player1Deck" class="ViewDeck"/>
              <ToggleButton id="Player1Ready" class="PlayerReadyButton">
                <Label class="OptionLabel" text="#DCG_PrivateLobby_Ready"/>
              </ToggleButton>
              <Label class="PlayerReady" text="#DCG_PrivateLobby_Ready"/>
              <Label class="PlayerNotReady" text="#DCG_PrivateLobby_NotReady"/>
              <Label class="PlayerWins" text="#DCG_PrivateLobby_PlayerWins"/>
            </Panel>
          </Panel>
        
          <Label class="ColumnHeader" text="#DCG_PrivateLobby_Vs"/>
        
          <Panel id="Player2Controls" class="PlayerControls">
            <Panel id="Player2Slot" class="PlayerList"/>
            <Panel class="PlayerButtons">
              <Panel id="Player2Deck" class="ViewDeck"/>
              <ToggleButton id="Player2Ready" class="PlayerReadyButton">
                <Label class="OptionLabel" text="#DCG_PrivateLobby_Ready"/>
              </ToggleButton>
              <Label class="PlayerReady" text="#DCG_PrivateLobby_Ready"/>
              <Label class="PlayerNotReady" text="#DCG_PrivateLobby_NotReady"/>
              <Label class="PlayerWins" text="#DCG_PrivateLobby_PlayerWins"/>
            </Panel>
          </Panel>
        
          <Label class="ColumnHeader" text="#DCG_PrivateLobby_Spectators"/>
          <Panel id="SpectatorList" class="PlayerList"/>
          
        </Panel>
      
        <Panel class="BodyColumn">
          <Label class="ColumnHeader" text="#DCG_PrivateLobby_Options"/>
          <Panel id="OptionsBody">
            <DropDown class="SelectDropDown" id="GameModeDropDown" dropdownbodyposition="100% 100%"/>
            <DropDown class="SelectDropDown" id="TimerDropDown" dropdownbodyposition="100% 100%"/>
            <ToggleButton id="ShowDecksToggle" onactivate="PrivateLobbySetVisibleDecks()">
              <Label class="OptionLabel" text="#DCG_PrivateLobby_ShowDecks"/>
            </ToggleButton>
            <Button class="ButtonDark" id="ShareDeck" onactivate="PrivateLobbyShareDeck()">
              <Label text="#DCG_PrivateLobby_ShareDeck"/>
            </Button>
          </Panel>
          <Label class="ColumnHeader" text="#DCG_PrivateLobby_Invites"/>
          <Panel id="InviteList" class="PlayerList"/>        
        </Panel>

      </Panel>

      <Panel id="ButtonBody">
        <Button class="ButtonDark" id="SelectDeck" onactivate="PrivateLobbySelectDeck()">
          <Label text="#DCG_PrivateLobby_SelectDeck"/>
        </Button>
        <Button class="ButtonDark" id="FindMatchButton" onactivate="PrivateLobbyFindMatch()">
          <Label text="#DCG_PrivateLobby_StartGame"/>
        </Button>
        <Button class="ButtonDark" id="LeaveButton" onactivate="PrivateLobbyLeave()">
          <Label text="#DCG_PrivateLobby_Leave"/>
        </Button>
      </Panel>

      <Panel id="FindingMatchRow">
        <Label class="FindingMatchLabel" text="#DCG_PrivateLobby_FindingMatch"/>
        <Button class="ButtonDark" id="LeaveButton" onactivate="PrivateLobbyCancelFindMatch()">
          <Label text="#DCG_PrivateLobby_CancelFindingMatch"/>
        </Button>

      </Panel>
      
    </Panel>

    <Panel id="OnGCOperation">
      <Label class="GCOperationText" text="{s:GCOperation}"/>
    </Panel>

  </Panel>
  
</root>
