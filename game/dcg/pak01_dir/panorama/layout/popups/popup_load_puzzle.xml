<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_load_puzzle.vcss_c" />
	</styles>

	<PopupLoadPuzzle class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

    <Label id="TitleLabel" class="PopupTitle" text="#DCG_LoadPuzzle_Title"/>
    <Panel class="SelectRow" >
      <DropDown class="SelectDropDown" id="MainAreaDropDown" dropdownbodyposition="100% 100%"/>
      <Button class="PopupButton" id="SubmitButton" onactivate="SubmitLoadPuzzleSelection()">
        <Label text="#DCG_LoadPuzzle_Submit"/>
      </Button>
    </Panel>
    <Panel class="DescriptionPanel">
      <Label id="DescriptionText" html="true" />
    </Panel>
    <Button id="CloseButton" class="PopupButton" onactivate="UIPopupButtonClicked()">
      <Label text="#DCG_LoadPuzzle_Cancel" />
    </Button>
	</PopupLoadPuzzle>
</root>
