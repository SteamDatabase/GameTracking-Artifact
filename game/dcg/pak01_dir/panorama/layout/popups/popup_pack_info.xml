<root>
	<styles>
		<include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_pack_info.vcss_c" />
	</styles>

	<PopupPackInfo class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">
    <Panel class="MainBody">
      <Panel class="BodyRow">
        <Label id="Title" text="#DCG_AboutPacks_Title"/>
      </Panel>

      <Label class="SectionTitle" text="#DCG_AboutPacks_Contents"/>
      <Panel class="PackContents">

        <Label class="InfoLabel" text="#DCG_AboutPacks_EachContains"/>
        <Panel class="RarityList">
          <Panel class="RarityCards">          
            <DCGSetIcon setid="1" rarity="Common"/>
            <Label class="RarityCount" text="6"/>
            <Label class="RarityLabel" text="#DCG_AboutPacks_Common"/>
          </Panel>

          <Panel class="RarityCards">
            <DCGSetIcon setid="1" rarity="Uncommon"/>
            <Label class="RarityCount" text="3"/>
            <Label class="RarityLabel" text="#DCG_AboutPacks_Uncommon"/>
          </Panel>

          <Panel class="RarityCards">
            <DCGSetIcon setid="1" rarity="Rare"/>
            <Label class="RarityCount" text="1"/>
            <Label class="RarityLabel" text="#DCG_AboutPacks_Rare"/>
          </Panel>
        </Panel>
        
        <Label class="InfoLabel" text="#DCG_AboutPacks_Upgrade1"/>
        <Label class="InfoLabel" text="#DCG_AboutPacks_Upgrade2"/>
      </Panel>

      <Label class="SectionTitle" text="#DCG_AboutPacks_PhantomPacks"/>
      <Panel class="PhantomPacks">
        <Label class="InfoLabel" text="#DCG_AboutPacks_Phantom1"/>
        <Label class="InfoLabel" text="#DCG_AboutPacks_Phantom2"/>
        <Label class="InfoLabel" text="#DCG_AboutPacks_Phantom3"/>
      </Panel>

      <Panel class="BodyRow">
        <Button id="CloseButton" class="ButtonDark" onactivate="UIPopupButtonClicked()">
          <Label text="#DCG_Close" />
        </Button>
      </Panel>
      
    </Panel>
    
	</PopupPackInfo>
</root>
