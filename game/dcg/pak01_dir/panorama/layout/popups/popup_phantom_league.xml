<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_phantom_league.vcss_c" />
	</styles>

	<PopupManagePacks class="PopupPanel Hidden" popupbackground="dim">

    <Panel class="MainBody">

      <Panel class="LeagueTabHeader">
        <RadioButton class="LeagueTab" id="CurrentLeagueTab" group="LeagueTabs" selected="true" onclick="">
          <Label text="#DCG_PhantomLeague_CurrentLeagueTab"/>
        </RadioButton>
        <RadioButton class="LeagueTab" id="NewLeagueTab" group="LeagueTabs" onclick="">
          <Label text="#DCG_PhantomLeague_NewLeagueTab"/>
        </RadioButton>
        <RadioButton class="LeagueTab" id="UpcomingLeagueTab" group="LeagueTabs" onclick="">
          <Label text="#DCG_PhantomLeague_UpcomingLeagueTab"/>
        </RadioButton>
      </Panel>
      
      <Panel class="LeagueInfoBody">

        <Panel class="PackTypeColumn" id="PhantomPacks">
          <Panel class="PackCollection">
            <Panel class="CardPocket" id="PhantomCardBackPocket">
              <!-- Dynamic Content -->
            </Panel>
          </Panel>
          <Label id="UnopenedPacksLabel" class="PackCount" text="#DCG_PhantomLeague_CurrentLeaguePacks" hittest="false"/>
          <Label id="IncludedPacksLabel" class="PackCount" text="#DCG_PhantomLeague_UpcomingLeaguePacks" hittest="false"/>
          <Panel id="IncludedItems">
            <!-- Dynamic Content -->  
          </Panel>
        </Panel>

        <Panel class="PackTypeColumn">
          
          <Button class="ButtonDark" id="JoinLeague" onactivate="PhantomLeagueJoin()">
            <Label text="#DCG_PhantomLeague_JoinLeague"/>
          </Button>

          <Panel id="TimerContainer">
            
            <Countdown id="AvailableTimer" class="CountdownTimer">
              <Label class="CountdownHeader" text="#DCG_PhantomLeague_AvailableAt"/>
              <Label class="CountdownTime" text="{t:d:t:countdown_time}"/>
            </Countdown>

            <Countdown id="EndTimer" class="CountdownTimer">
              <Label class="CountdownHeader" text="#DCG_PhantomLeague_EndsAt"/>
              <Label class="CountdownTime" text="{t:d:t:countdown_time}"/>
            </Countdown>

            <Countdown id="VisibleTimer" class="CountdownTimer">
              <Label class="CountdownHeader" text="#DCG_PhantomLeague_VisibleAt"/>
              <Label class="CountdownTime" text="{t:d:t:countdown_time}"/>
            </Countdown>
            
          </Panel>

          <Button class="ButtonDark" id="ViewGlobalPool" onactivate="PhantomLeagueShowGlobalPool()">
            <Label text="#DCG_PhantomLeague_ViewGlobalPool"/>
          </Button>

          <Panel id="DeckListContainer">
            <Label id="DeckListTitle" text="#DCG_PhantomLeague_PremadeDecks"/>
            <Panel id="DeckList">
              <!-- Dynamic Content -->
            </Panel>
          </Panel>

          <Label class="PhantomInfo" text="#DCG_PackOpening_PhantomPackPlaceholder"/>

        </Panel>

      </Panel>

      <Panel class="BottomButtonRow">
        <Button class="ButtonDark" id="CancelButton" onactivate="UIPopupButtonClicked()">
          <Label text="#DCG_Close"/>
        </Button>
      </Panel>
    </Panel>
		
	</PopupManagePacks>
</root>
