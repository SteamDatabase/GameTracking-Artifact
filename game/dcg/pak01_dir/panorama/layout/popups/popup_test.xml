<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_test.vcss_c" />
	</styles>

	<PopupTest class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">
    <Panel class="MainBody">
      <Panel class="BodyRow">
        <Label id="Title" text="#DCG_DBCollection_Title"/>
      </Panel>

      <Panel class="BodyRow">
        <Panel class="SampleCell" id="Cell1"/>
        <Panel class="SampleCell" id="Cell2"/>
        <Panel class="SampleCell" id="Cell3"/>
        <Panel class="SampleCell" id="Cell4"/>
        <Panel class="SampleCell" id="Cell5"/>
      </Panel>

      <Panel class="BodyRow">
        <Button id="CloseButton" class="PopupButton" onactivate="UIPopupButtonClicked()">
          <Label text="#Cancel" />
        </Button>
      </Panel>
      
    </Panel>
    
	</PopupTest>
</root>
