<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/tourney_series_node.vcss_c" />
	</styles>

	<snippets>

		<snippet name="VerticalLayout">

			<Panel class="VerticalLayout">
				<Panel class="LiveContainer">
					<Panel class="LiveSpacer" />
					<Label class="Live" text="#DCG_Tournament_Live" />
				</Panel>
				<Panel class="RowContainer">
					<Panel class="PlayerRow" id="Row0" >
            <Panel class="PlayerDeck" id="PlayerDeck0"/>
						<DCGAvatarImage class="AvatarImage" id="AvatarImage0" />
						<Panel class="Empty" />
						<Label class="PlayerName Real" text="{g:dcg_persona:account_id}" html="true" />
						<Panel class="GamesWonBox" >
							<Label class="GamesWon" text="{d:games_won_0}" />
						</Panel>
					</Panel>
					<Panel class="PlayerRow" id="Row1" >
            <Panel class="PlayerDeck" id="PlayerDeck1"/>
						<DCGAvatarImage class="AvatarImage" id="AvatarImage1" />
						<Panel class="Empty" />
						<Label class="PlayerName Real" text="{g:dcg_persona:account_id}" html="true" />
						<Panel class="GamesWonBox" >
							<Label class="GamesWon" text="{d:games_won_1}" />
						</Panel>
					</Panel>
				</Panel>
				<Panel class="LiveSpacer" />
			</Panel>

		</snippet>

		<snippet name="HorizontalLayout">

			<Panel class="HorizontalLayout">
				<Panel class="RowContainer">
					<Panel class="PlayerRow" id="Row0" >
						<Panel class="ScoreBox" >
							<Label class="Score" text="{d:score_0}" />
						</Panel>
            <Panel class="PlayerDeck" id="PlayerDeck0"/>
						<DCGAvatarImage class="AvatarImage" id="AvatarImage0" />
						<Panel class="Empty" />
						<Label class="PlayerName Real" text="{g:dcg_persona:account_id}" html="true" />
					</Panel>
					
					<Panel class="PlayerRow" id="Row1" >
						<Panel class="ScoreBox" >
							<Label class="Score" text="{d:score_1}" />
						</Panel>
            <Panel class="PlayerDeck" id="PlayerDeck1"/>
						<DCGAvatarImage class="AvatarImage" id="AvatarImage1" />
						<Panel class="Empty" />
						<Label class="PlayerName Real" text="{g:dcg_persona:account_id}" html="true" />
					</Panel>
				</Panel>
				<Panel class="ResultsBox" >
						<Label class="ResultsLabel WonLostTied" text="{d:games_won_0}-{d:games_tied}-{d:games_won_1}" />
						<Label class="ResultsLabel ByeLabel" text="#DCG_Tournament_Bye" />
					</Panel>
				<Label class="Live" text="#DCG_Tournament_Live" />
			</Panel>

		</snippet>
	</snippets>

	<DCGTourneySeriesNode>
		<Panel id="Contents" />
	</DCGTourneySeriesNode>
</root>

												  