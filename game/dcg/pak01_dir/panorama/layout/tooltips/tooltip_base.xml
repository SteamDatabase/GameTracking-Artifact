<root>
	<styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/tooltips/tooltip_base.vcss_c" />
	</styles>

  <TooltipBase class="TooltipContainer" hittest="false" hittestchildren="false" >
    <Panel id="TopArrow" arroworigin="50% 0%">
      <Panel id="TopArrowOutter" />
      <Panel id="TopArrowInner" />
    </Panel>

    <Panel class="TooltipRow" hittest="false">
      <Panel id="LeftArrow" arroworigin="0% 50%">
        <Panel id="LeftArrowOutter" />
        <Panel id="LeftArrowInner" />
      </Panel>
      <TooltipContents id="Contents" hittest="false" />
      <Panel id="RightArrow" arroworigin="100% 50%">
        <Panel id="RightArrowOutter" />
        <Panel id="RightArrowInner" />
      </Panel>
    </Panel>

    <Panel id="BottomArrow" arroworigin="50% 100%">
      <Panel id="BottomArrowOutter" />
      <Panel id="BottomArrowInner" />
    </Panel>
  </TooltipBase>
</root>
