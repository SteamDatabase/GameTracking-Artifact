<root>
	<styles>
		<include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/ui_tooltip_graph_column_cards.vcss_c" />
	</styles>

  <Panel>
    <Panel id="GraphColumnCardList">
      <Label id="TurnLabel" text="#DCG_GraphTooltip_TurnLabel"/>
      <Label id="Units" text="{s:graphUnits}"/>
      <Panel id="PlayerContainer">
        <Panel id="PlayerColumn" class="ScoreColumn">
          <Label id="PlayerValue" class="GraphValue" text="{s:playerValue}"/>
          <Panel id="PlayerCards" class="CardColumn">
            <!-- Dynamic Content -->
          </Panel>
        </Panel>
        <Panel id="EnemyColumn" class="ScoreColumn">
          <Label id="EnemyValue" class="GraphValue" text="{s:enemyValue}"/>
          <Panel id="EnemyCards" class="CardColumn">
            <!-- Dynamic Content -->
          </Panel>
        </Panel>
      </Panel>
      
      <Label id="TotalLabel" text="#DCG_GraphTooltip_TotalLabel"/>
      <Panel id="TotalContainer">
        <Label id="PlayerTotal" class="TotalValue" text="{s:playerTotalValue}"/>
        <Label id="EnemyTotal" class="TotalValue" text="{s:enemyTotalValue}"/>
      </Panel>
      
    </Panel>
  </Panel>  
</root>