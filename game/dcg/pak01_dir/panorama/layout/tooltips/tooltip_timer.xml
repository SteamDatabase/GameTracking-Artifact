<root>
	<styles>
    <include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
    <include src="s2r://panorama/styles/tooltips/tooltip_timer.vcss_c" />
	</styles>
	
  <DCGTooltipTimer class="AttributeContents" hittestchildren="false" hittest="false">  
    <Panel class="TimerTooltip">
      <Panel class="InfoHeader">
        <Panel class="GameClockSection">
          <Image class="GameClockIcon"/>
          <Label class="GameClockNumber" text="{s:gameClock}" html="true" />
        </Panel>
        <Panel class="HeaderSection">
          <Label class="InfoHeaderText" text="#DCG_Coin_Tooltip_GameClockTitle" html="true" />
          <Label class="InfoHeaderNumber" text="{s:gameClock}" html="true" />
        </Panel>
      </Panel>
      <Panel class="InfoDescription">
        <Panel class="InfoDescriptionLine">
          <Label class="DescriptionLabel" text="#DCG_Coin_Tooltip_GameClockInitialTime" html="true" />
          <Label class="DescriptionText" text="#DCG_Coin_Tooltip_GameClockInitialTimeValue" html="true" />
        </Panel>
        <Panel class="InfoDescriptionLine">
          <Label class="DescriptionLabel" text="#DCG_Coin_Tooltip_GameClockBonusTime" html="true" />
          <Label class="DescriptionText" text="#DCG_Coin_Tooltip_GameClockBonusTimeValue" html="true" />
        </Panel>
        <Label class="DescriptionText" text="" html="true" />
        <Label class="DescriptionText" text="#DCG_Coin_Tooltip_GameClockDesc" html="true" />
      </Panel>
      <Panel class="InfoHeader">
        <Image class="TurnClockIcon"/>
        <Panel class="HeaderSection">
          <Label class="InfoHeaderText" text="#DCG_Coin_Tooltip_TurnClockTitle" html="true" />
          <Label class="InfoHeaderNumber" text="{s:turnClock}" html="true" />
        </Panel>
      </Panel>
      <Panel class="InfoDescription">
        <Panel class="InfoDescriptionLine">
          <Label class="DescriptionLabel" text="#DCG_Coin_Tooltip_TurnClockInitialTime" html="true" />
          <Label class="DescriptionText" text="#DCG_Coin_Tooltip_TurnClockInitialTimeValue" html="true" />
        </Panel>
        <Label class="DescriptionText" text="" html="true" />
        <Label class="DescriptionText" text="#DCG_Coin_Tooltip_TurnClockDesc" html="true" />
      </Panel>
      <Panel class="InfoHeader">
        <Image class="TurnCoinIcon"/>
        <Panel class="HeaderSection">
          <Label class="InfoHeaderText" text="#DCG_Coin_Tooltip_TurnCoinTitle" html="true" />
          <Label class="InfoHeaderNumber" text="{s:coinState}" html="true" />
        </Panel>
      </Panel>
      <Panel class="InfoDescription">
        <Label class="DescriptionText" text="#DCG_Coin_Tooltip_TurnCoinDesc" html="true" />
      </Panel>
	  </Panel>
    
  </DCGTooltipTimer>
</root>