<root>
	<styles>
    <include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
    <include src="s2r://panorama/styles/tooltips/tooltip_card_attribute.vcss_c" />
	</styles>
	
  <DCGTooltipCardAttribute class="AttributeContents" hittestchildren="true" hittest="true">
    
    <Panel id="Header">
	    <Panel id="AttributeHeader">
	      <Label id="AttributeName" text="{s:AttributeName}" html="true" />
	      <Label id="AttributeDesc" text="{s:AttributeDesc}" html="true" />
	    </Panel>
    </Panel>
    
    <Panel id="Body">
    </Panel>
    <Panel id="Footer">
    	<Panel id="AttackFooter">
    
	      <Panel id="Siege" class="AttackAttribute Attribute">
	        <Image id="SiegeImage" src="s2r://panorama/images/hud/effect_icons/siege_psd.vtex"/>
	        <Label text="{d:siege}"/>
	      </Panel>
	      <Panel class="Separator"/>

	      <Panel id="Cleave" class="AttackAttribute Attribute">
	        <Image id="CleaveImage" src="s2r://panorama/images/hud/effect_icons/cleave_psd.vtex"/>
	        <Label text="{d:cleave}"/>
	      </Panel>
	      <Panel class="Separator"/>

	      <Panel id="Retaliate" class="AttackAttribute Attribute">
	        <Image id="RetaliateImage" src="s2r://panorama/images/hud/effect_icons/retaliate_psd.vtex"/>
	        <Label text="{d:retaliate}"/>
	      </Panel>
	      <Panel class="Separator"/>

	      <Panel id="Piercing" class="AttackAttribute Attribute">
	        <Image id="PiercingImage" src="s2r://panorama/images/hud/effect_icons/piercing_psd.vtex"/>
	      </Panel>
	      <Panel class="Separator"/>

	      <Panel id="Disarmed" class="AttackAttribute Attribute">
	        <Image id="DisarmedImage" src="s2r://panorama/images/hud/effect_icons/disarmed_psd.vtex"/>        
	      </Panel>
	    
	    </Panel>  

			<Panel id="HealthFooter">
	      <Panel id="Regeneration" class="HealthAttribute Attribute">
	        <Image id="RegenerationImage" src="s2r://panorama/images/hud/effect_icons/regen_psd.vtex"/>
	        <Label text="{d:regeneration}"/>
	      </Panel>
	      <Panel class="Separator"/>
	      
	      <Panel id="Bounty" class="BountyAttribute Attribute">
	        <Image id="BountyImage" src="s2r://panorama/images/hud/effect_icons/bounty_psd.vtex"/>
	        <Label text="{d:bounty}"/>
	      </Panel>
	      <Panel class="Separator"/>
	      
	      <Panel id="DeathShield" class="HealthAttribute Attribute">
	        <Image id="DeathShieldImage" src="s2r://panorama/images/hud/effect_icons/death_shield_psd.vtex"/>      
	      </Panel>
	      <Panel class="Separator"/>
	     
	      <Panel id="Invulnerability" class="HealthAttribute Attribute">
	        <Image id="InvulnerabilityImage" src="s2r://panorama/images/hud/effect_icons/immunity_psd.vtex"/>
	      </Panel>

			</Panel>
    </Panel>
        
    </DCGTooltipCardAttribute>
</root>