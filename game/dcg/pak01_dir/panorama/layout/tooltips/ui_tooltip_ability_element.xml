<root>
	<styles>
		<include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/ui_tooltip_ability_element.vcss_c" />
	</styles>

	<DCGTooltipAbilityElement>
		<Panel id="AbilityElementContainer">
			<Panel id="AbilityHeader">
				<Image id="AbilityImage" scaling="stretch-to-fit-y-preserve-aspect" />
        <Panel id="AbilityHeaderTextContent">
          <Label id="AbilityName" text="{s:ability_name}" />
				  <Label id="AbilityType" text="{s:ability_type}" />
        </Panel>
      </Panel>
			<Panel id="AbilityHeaderShadow" />
			<Panel id="AbilityBody">
				<Label id="AbilityText" text="{s:ability_prefix}{s:ability_text}" html="true" />
        <Label id="ChargesText" text="#DCG_CardText_ChargesTooltip" html="true" />
			</Panel>
		</Panel>
  </DCGTooltipAbilityElement>

 </root>