<root>
	<styles>
    <include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
    <include src="s2r://panorama/styles/tooltips/tooltip_card_attribute_element.vcss_c" />
	</styles>

  <DCGTooltipCardAttributeElement class="DCGTooltipCardAttributeElement">

	<Panel class="MainBlock">

	  	<Image id="SourceArtwork"/>
  	
	  	<Panel class="SourceID">
				<Panel id="SourceNameContainer">
          <Label class="SourceName NoStacks" text="#DCG_CardAttributeSource"/>
          <Label class="SourceName WithStacks" text="#DCG_CardAttributeSource_Stacks"/>
				</Panel>
				<Panel id="SourceTypeContainer">
					<Label class="SourceType NoOwner" text="#DCG_CardAttributeType"/>
          <Label class="SourceType WithOwner" text="#DCG_CardAttributeType_Owner"/>
          <Label class="SourceType Unowned" text="#DCG_CardAttributeType"/>         <!-- if we're dealing with something that neither can have an owner nor not, like a totals row -->
				</Panel>
	  	</Panel>
  	
	  	<Panel class="ResultsBlock">
        <Label id="ValueNumerator" class="AttributeValue" text="#DCG_CardAttributeValue_Numerator"/>
        <Label id="ValueDivider" class="FractionAttributeValue Divider" text="/"/>
        <Label id="ValueDenominator" class="FractionAttributeValue Denominator" text="#DCG_CardAttributeValue_Denominator"/>
	  	</Panel>
	
  	</Panel>
  </DCGTooltipCardAttributeElement>

</root>