<root>
	<styles>
		<include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
		<include src="s2r://panorama/styles/deck_list_components/card_summary_histogram.vcss_c" />
	</styles>

	<CardSummaryHistogram class="CardSummaryHistogram HistogramsRegion">
		<Panel id="ManaCurveHistogram"/>

		<Panel id="CardColorHistogram">

			<Panel class="FlowRight">
				<Panel id="HistogramColorCountRed"    class="HistogramColorCount">
					<Label class="HistogramColorCountLabel" text="{i:histogramColorCountRed}"/>
				</Panel>
				<Panel id="HistogramColorCountGreen"  class="HistogramColorCount">
					<Label class="HistogramColorCountLabel" text="{i:histogramColorCountGreen}"/>
				</Panel>
			</Panel>

			<Panel class="FlowRight">
				<Panel id="HistogramColorCountBlue"   class="HistogramColorCount">
					<Label class="HistogramColorCountLabel" text="{i:histogramColorCountBlue}"/>
				</Panel>
				<Panel id="HistogramColorCountBlack"  class="HistogramColorCount">
					<Label class="HistogramColorCountLabel" text="{i:histogramColorCountBlack}"/>
				</Panel>
			</Panel>
		</Panel>
		<Label id="TotalCardCountLabel" text="#DCG_DeckHistogram_ManaCardNumber" />
	</CardSummaryHistogram>

</root>
