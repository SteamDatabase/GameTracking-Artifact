<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/settings.vcss_c" />
	</styles>

	<Panel class="Hidden">
		<Panel id="VideoResolutionLeft" class="SettingsDualColumn FullHeight">
			<Label class="SectionHeaderLabel" text="#DCG_Settings_Resolution" />
			<Panel class="SectionHeaderLine" />
			<RadioButton id="UseNativeResolutionButton" group="CustomResolution" class="OptionsCheckBox" onactivate="DCGSettingsCustomResolution(0);" text="#DCG_Settings_UseNativeResolution" />
			<RadioButton id="UseCustomResolutionButton" group="CustomResolution" class="OptionsCheckBox" onactivate="DCGSettingsCustomResolution(1);" text="#DCG_Settings_UseCustomResolution" />

			<Panel id="CustomVideoResolution" class="TopBottomFlow">
				<Label text="#DCG_Settings_AspectRatio" />
				<Panel id="AspectRatioPanel" class="LeftRightFlow">
					<RadioButton group="AspectRatioButtons"	class="Hidden OptionsCheckBox" onactivate="DCGSettingsSetAspectRatio(0);" text="#DCG_Settings_4x3Aspect" />
					<RadioButton group="AspectRatioButtons" class="OptionsCheckBox" onactivate="DCGSettingsSetAspectRatio(1);" text="#DCG_Settings_16x9Aspect" />
					<RadioButton group="AspectRatioButtons" class="OptionsCheckBox" onactivate="DCGSettingsSetAspectRatio(2);" text="#DCG_Settings_16x10Aspect" />
				</Panel>
				<Panel class="LeftRightFlow">
					<Panel class="TopBottomFlow" id="ResolutionPanel">
						<Label text="#DCG_Settings_ResolutionSize" />
						<DropDown id="ResolutionDropDown">
							<!-- autogenerated -->
						</DropDown>
					</Panel>
					<Panel class="TopBottomFlow" id="DisplayModePanel">
						<Label text="#DCG_Settings_DisplayMode" />
						<DropDown id="DisplayModeDropDown">
							<Label id="fullscreen" text="#DCG_Settings_Fullscreen" Fullscreen="1" />
							<Label id="coop_fullscreen" text="#DCG_Settings_Coop_Fullscreen" CoopFullscreen="1" />
							<Label id="window" text="#DCG_Settings_Window" />
							<Label id="no_border" text="#DCG_Settings_Borderless" NoBorder="1" />
						</DropDown>
					</Panel>
				</Panel>
			</Panel>
			<Panel id="VideoAcceptButtonsPanel" class="LeftRightFlow">
				<Button id="ApplyResolutionButton" class="ButtonBevel" onactivate="DCGSettingsApplyVideoSettings()">
					<Label text="#DCG_Settings_Apply" />
				</Button>
				<Button onactivate="DCGSetVideoDefaults()" id="VideoDefaultsButton" class="ButtonBevel">
					<Label text="#DCG_Settings_ResetDefaults" />
				</Button>
			</Panel>
			
		</Panel>
		<Panel id="VideoResolutionRight" class="SettingsDualColumn FullHeight">
					<Label text="#DCG_Settings_Rendering" class="SectionHeader" />
					<Panel class="SectionHeaderLine"/>
					<RadioButton group="VideoDetails" class="OptionsCheckBox" onactivate="DCGSetAdvancedGraphics(0);" id="BasicGraphicsButton" text="#DCG_Settings_BasicVideoSettings" />
					<Panel id="BasicVideo">
						<SlottedSlider id="VideoPresetsSlider" class="HorizontalSlider" direction="horizontal" notches="4" />
						<Panel id="VideoSliderLabels" class="LeftRightFlow">
							<Label id="FastestLabel" text="#DCG_Settings_VideoFastest" />
							<Label id="BestLookingLabel" text="#DCG_Settings_VideoBestLooking" />
						</Panel>
					</Panel>
					<RadioButton group="VideoDetails" class="OptionsCheckBox" onactivate="DCGSetAdvancedGraphics(1);" id="AdvancedGraphicsButton" text="#DCG_Settings_AdvancedVideoSettings" />
					<Panel id="AdvancedVideo" class="FullHeight">
						<Panel id="AdvancedTopContainer">
							<Panel class="SettingsDualColumn FullHeight">
								<DCGSettingsCheckbox convar="r_deferred_additive_pass" text="#DCG_Settings_AdditiveLight" />
								<DCGSettingsCheckbox convar="r_deferred_simple_light" text="#DCG_Settings_WorldLight" />
								<DCGSettingsCheckbox convar="r_ssao" text="#DCG_Settings_AmbientOcclusion" />
								<DCGSettingsCheckbox convar="dcg_ambient_creatures" text="#DCG_Settings_AmbientCreatures" />
								<ToggleButton class="CheckBox" id="GrassToggle" text="#DCG_Settings_Grass"	onactivate="DCGToggleGrassVisible();" />
							</Panel>
							<Panel class="SettingsDualColumn FullHeight">
								<DCGSettingsCheckbox convar="r_dota_fxaa" text="#DCG_Settings_AntiAliasing" />
								<DCGSettingsCheckbox convar="r_deferred_specular" text="#DCG_Settings_Specular" />
								<DCGSettingsCheckbox convar="r_deferred_specular_bloom" text="#DCG_Settings_Bloom" />
								<DCGSettingsCheckbox convar="dota_cheap_water" invert="true" text="#DCG_Settings_WaterQuality" />
								<DCGSettingsCheckbox convar="r_deferred_height_fog" text="#DCG_Settings_Fog" />
								<ToggleButton class="CheckBox" id="VSyncToggle" text="#DCG_Settings_VSync"	onactivate="DCGToggleVSync();" />
							</Panel>
						</Panel>
						<DCGSettingsEnum class="HorizontalEnum" convar="r_texture_stream_mip_bias" text="#DCG_Settings_TextureQuality" id="TextureEnum" >
							<RadioButton text="#DCG_Settings_TextureQuality_Low" value="2" class="EnumButton" id="TextureQualityLow" group="texturequality" />
							<RadioButton text="#DCG_Settings_TextureQuality_Med" value="1" class="EnumButton" id="TextureQualityMed" group="texturequality" />
							<RadioButton text="#DCG_Settings_TextureQuality_High" value="0" class="EnumButton" id="TextureQualityHigh" group="texturequality" />
						</DCGSettingsEnum>
						<DCGSettingsEnum class="HorizontalEnum" convar="cl_particle_fallback_base" text="#DCG_Settings_ParticleQuality" id="ParticleEnum" >
							<RadioButton text="#DCG_Settings_ParticleQuality_Low" value="4" class="EnumButton" id="ParticleQualityLow" group="particlequality" />
							<RadioButton text="#DCG_Settings_ParticleQuality_Med" value="2" class="EnumButton" id="ParticleQualityMed" group="particlequality" />
							<RadioButton text="#DCG_Settings_ParticleQuality_High" value="0" class="EnumButton" id="ParticleQualityHigh" group="particlequality" />
						</DCGSettingsEnum>
						<DCGSettingsEnum class="HorizontalEnum" convar="cl_globallight_shadow_mode" text="#DCG_Settings_ShadowQuality" id="ShadowEnum" >
							<RadioButton text="#DCG_Settings_ShadowQuality_Off" value="0" class="EnumButton" id="ShadowQualityLow" group="shadowquality" />
							<RadioButton text="#DCG_Settings_TextureQuality_Med" value="1" class="EnumButton" id="ShadowQualityMed" group="shadowquality" />
							<RadioButton text="#DCG_Settings_TextureQuality_High" value="2" class="EnumButton" id="ShadowQualityHigh" group="shadowquality" />
						</DCGSettingsEnum>
						<DCGSettingsSlider id="RenderQuality" convar="mat_viewportscale" min="0.4" max="1.0" percentage="true" text="#DCG_Settings_RenderQuality" />
						<DCGSettingsSlider id="FpsMaxSlider" convar="fps_max" min="60" max="240" disableifoutofrange="true" text="#DCG_Settings_FPS_Max" onmouseover="UIShowTextTooltipStyled( #DCG_Settings_FPSMaxTip, OptionsTooltip)" onmouseout="UIHideTextTooltip()" />
				</Panel>
		</Panel>
	</Panel>
</root>
