<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/tourney_phase_bracket_single_elim.vcss_c" />
	</styles>

	<DCGTourneyPhaseBracketSingleElim>
				
		<Panel class="DetailsContainer">
			<DragZoom id="PhaseZoomContainer" require-composition-layer="true" >
				<Panel id="Elements">
					<!-- dynamic stuff -->
				</Panel>
			</DragZoom>
			<Label class="UnavailableLabel" text="#DCG_TourneyStatus_PhaseUnavailable" />
		</Panel>
		
		<Panel class="Overview">
			<Panel class="InfoContainer">
				<Label class="InfoDesc" text="#DCG_TourneyAddPhase_MaxPlayers" />
				<Label id="MaxPlayers" text="{d:max_players}" />
			</Panel>
			<Panel class="InfoContainer">
				<Label class="InfoDesc" text="#DCG_TourneyAddPhase_DeckRules" />
				<Label text="{s:deck_rules}" />
      </Panel>
      <Panel class="InfoContainer DeckValidator">
        <Label text="{s:deck_validator}" />
      </Panel>
      <Panel class="InfoContainer">
				<Label class="InfoDesc" text="#DCG_TourneyAddPhase_Games" />
				<Label id="BestOf" text="{s:series}" />
			</Panel>
			<Panel class="InfoContainer FinalsBestOf">
				<Label class="InfoDesc" text="#DCG_TourneyAddPhase_FinalsGames" />
				<Label id="FinalsBestOf" text="{s:finals_series}" />
			</Panel>
		</Panel>
		
	</DCGTourneyPhaseBracketSingleElim>
</root>
