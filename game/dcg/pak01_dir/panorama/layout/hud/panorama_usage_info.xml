<root>
  <styles>
    <include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
    <include src="s2r://panorama/styles/hud/panorama_usage_info.vcss_c" />
  </styles>

  <snippets>
    <snippet name="sheetEntry">
      <Panel class="sheetEntry">
        <Label class="sheetName" text="{s:sheetName}"/>
      </Panel>
    </snippet>
  </snippets>

  <Panel class="PanoramaUsageInfo" hittest="false">
    <Panel class="LeftColumn" >
      <Label class="HeaderLabel" text="#DCG_PanoramaUsageInfo"/>
      <Panel class="PanoramaUsageOverview">
        <Label class="InfoLabel" text="#DCG_PanoramaUsageInfo_SheetRes"/>
        <Label class="InfoLabel" text="#DCG_PanoramaUsageInfo_MemPerSheet"/>
        <Label class="InfoLabel" text="#DCG_PanoramaUsageInfo_TotalMem"/>
        <Label class="InfoLabel" text="#DCG_PanoramaUsageInfo_SheetCount"/>
        <Label class="InfoLabel" text="#DCG_PanoramaUsageInfo_PanelCount"/>
      </Panel>
      <Panel id="SheetList">
      </Panel>
    </Panel>
    <DCGSheetRender id="SheetRender" />
    <Panel class="RightColumn" >
    </Panel>
  </Panel>
</root>