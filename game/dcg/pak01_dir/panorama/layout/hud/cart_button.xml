<root>
	<styles>
	  <include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
		<include src="s2r://panorama/styles/hud/cart_button.vcss_c" />
	</styles>

	<Panel class="PlayerCartButton">
    <Button id="OpenCartButton" class="ButtonDark" onactivate="DCGCartButtonOpen()">
      <Label class="CartLabel ShowOnPurchase" text="#DCG_CartButton_Purchase"/>
      <Label class="CartLabel ShowOnSell" text="#DCG_CartButton_Sell"/>
      <Panel class="QuantityGroup">
        <Panel class="QuantityBackground"/>
        <Label class="QuantityCount" text="{d:cartQuantity}"/>
      </Panel>
    </Button>
	</Panel>
</root>
