<root>
	<styles>
		<include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
		<include src="s2r://panorama/styles/hud/hud_chat_wheel.vcss_c" />
	</styles>
	<DCGChatWheel class="Hidden" hittest="false">
    <Panel id="ChatWheelBackground"/>
    <Panel id="ChatWheelGroup">
      <Panel id="ChatWheelTitle">
        <Panel id="CardTitleGroup">
          <DCGSetIcon id="CardSetIcon"/>
          <Image id="CardImage"/>
          <DCGCardName id="CardName"/>
        </Panel>
      </Panel>
      <Panel id="ChatWheelBody">
		    <Panel id="Wheel">
			    <Panel id="Arrow0" class="Arrow Hidden" />
			    <Panel id="Arrow1" class="Arrow Hidden" />
			    <Panel id="Arrow2" class="Arrow Hidden" />
			    <Panel id="Arrow3" class="Arrow Hidden" />
			    <Panel id="Arrow4" class="Arrow Hidden" />
			    <Panel id="Arrow5" class="Arrow Hidden" />
			    <Panel id="Arrow6" class="Arrow Hidden" />
			    <Panel id="Arrow7" class="Arrow Hidden" />
			    <Panel id="PointerContainer">
				    <Panel id="WheelPointer" />
			    </Panel>
			    <Panel id="WheelBG">
				    <Panel id="WheelCenter">
					    <Panel id="WheelBG2">

					    </Panel>
				    </Panel>
			    </Panel>
			    <Panel id="Bubble" />
		    </Panel>
		    <Label id="Phrase0" class="Phrase" text="{s:phrase}" html="true" />
		    <Label id="Phrase1" class="Phrase" text="{s:phrase}" html="true" />
		    <Label id="Phrase2" class="Phrase" text="{s:phrase}" html="true" />
		    <Label id="Phrase3" class="Phrase" text="{s:phrase}" html="true" />
		    <Label id="Phrase4" class="Phrase" text="{s:phrase}" html="true" />
		    <Label id="Phrase5" class="Phrase" text="{s:phrase}" html="true" />
		    <Label id="Phrase6" class="Phrase" text="{s:phrase}" html="true" />
		    <Label id="Phrase7" class="Phrase" text="{s:phrase}" html="true" />
      </Panel>
      <Panel id="FullTextFooter">
        <Label id="FullText" text="{s:fulltext}"/>
      </Panel>
    </Panel>
	</DCGChatWheel>
</root>


