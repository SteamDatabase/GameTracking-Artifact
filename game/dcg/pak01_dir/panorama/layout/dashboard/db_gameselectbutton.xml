<root>
	<styles>
		<include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard/dcg_db_page.vcss_c" />
		<include src="s2r://panorama/styles/dashboard/dcg_db_page_play.vcss_c" />
	</styles>
	<Panel>
		<RadioButton id="AIMatchButton" class="GameSelectButton" group="Gauntlet" onactivate="DCGPlayCarouselSetContext( ePlayContextSolo_AIMatch, 0 )">
			<Image class="BlurBackgroundButtonImage" src="panel-background://AIMatchButton" hittest="false" />
			<Panel class="BlurBackgroundButtonOverlay" hittest="false" />
			<Panel class="GameSelectButtonContents">
				<Panel id="ChallengeFriendIcon" class="GameSelectIcon"/>
				<Label text="#DCG_LoadDeckSelect_AI" class="GameSelectLabel"/>
			</Panel>	
			<DCGScenePanel class="GameSelectButtonHighlight" camera="camera" map="scenes/mainmenu/mainmenu_button_highlight" hittest="false" require-composition-layer="true" light="model_light" particleonly="false" antialias="true"/>
		</RadioButton>
	</Panel>
</root>
