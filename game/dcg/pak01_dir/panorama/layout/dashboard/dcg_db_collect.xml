    <include src="s2r://panorama/styles/dashboard/dcg_db_collect.vcss_c" />
	</styles>

	<Panel class="DashboardPage PlayPage" hittest="false">
		<Panel id="CollectionPanel" class="DashboardPanel">
			<Panel class="TitleCard">
				<Label text="#DCG_DBCollection_Title" />
			</Panel>
			<Panel class="ControlsPanel">
				<Button class="PanelButton" id="CollectionButton" onactivate="DCGShowCollection()">
					<Label text="#DCG_DBCollection_Collection" />
				</Button>
				<Button class="PanelButton" id="NewLoreButton" onactivate="DCGShowCollectionNewLore()">
					<Label text="#DCG_DBCollection_NewLore" />
				</Button>
				<Button class="PanelButton" id="DeckEditorButton" onactivate="DCGShowDeckBuilder()">
					<Label text="#DCG_DBCollection_BuildDeck" />
				</Button>
        <Button class="PanelButton" id="TournamentDeckEditorButton" onactivate="DCGShowTournamentDeckBuilder()">
          <Label text="#DCG_DBCollection_BuildTournamentDeck" />
        </Button>
 			</Panel>
		</Panel>
	</Panel>
</root>
