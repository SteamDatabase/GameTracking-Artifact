<root>
	<styles>
		<include src="s2r://panorama/styles/base.vcss_c" />
		<include src="s2r://panorama/styles/dashboard/dcg_db_page.vcss_c" />
		<include src="s2r://panorama/styles/dashboard/dcg_db_watch_replay.vcss_c" />
	</styles>

	<Panel class="DashboardPage WatchPage" hittest="false">
		<Panel id="WatchReplayPanel" class="DashboardPanel">
			<Panel class="TitleCard">
				<Label id="TitleBarText" text="#DCG_DBWatch_Title"/>
			</Panel>
			<Panel class="ControlArea">
				<Label text="#DCG_DBWatch_MatchIDLabel"/>
				<TextEntry id="MatchID" />
				<Button class="PanelButton" id="SubmitButton" onactivate="DCGLaunchReplay()" >
					<Label text="#DCG_DBWatch_LoadButton"/>
				</Button>
			</Panel>
		</Panel>
		
	</Panel>
