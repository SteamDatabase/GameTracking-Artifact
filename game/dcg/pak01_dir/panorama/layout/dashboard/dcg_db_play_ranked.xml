<root>
	<styles>
		<include src="s2r://panorama/styles/base.vcss_c" />
    <include src="s2r://panorama/styles/dashboard/dcg_db_page.vcss_c" />
    <include src="s2r://panorama/styles/dashboard/dcg_db_play.vcss_c" />
	</styles>

	<Panel class="DashboardPage PlayPage" hittest="false">
		<Panel id="PlayPanel" class="DashboardPanel">
			<Panel class="TitleCard">
				<Label text="#DCG_DBPlayRanked_Title" />
			</Panel>
      <Label class="RatingLabel" html="true" text="Current Rating: {g:dcg_player_rating:local_rating}"/>
			<Panel class="ControlsPanel">
        <Button class="PanelButton" id="AbandonGameButton" onactivate="DCGAbandonLobby()">
          <Label text="#DCG_DBPlay_AbandonGame" />
        </Button>
				<Button class="PanelButton" id="FindOpponentButton" onactivate="DCGShowRankedPage()">
					<Label id="SearchText" text="#DCG_DBPlay_FindOpponent" />
				</Button>
			</Panel>
		</Panel>
	</Panel>
</root>
