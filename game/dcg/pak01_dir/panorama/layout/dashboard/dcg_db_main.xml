<root>
	<styles>
    <include src="s2r://panorama/styles/base.vcss_c" />
		<include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard/dcg_db_main.vcss_c" />
		<include src="s2r://panorama/styles/dashboard/dcg_db_page.vcss_c" />
 	</styles>
	
	<DCGDashboard class="InitialDisplay NotOnTodayPage" hittest="false">
		<Movie id="BackgroundVideo" src="file://{resources}/videos/main_menu/openingscreen.webm" controls="none" repeat="true" autoplay="onload" disableactivatepause="true" />
		
		<Panel id="InitialDisplayPanelLogo" hittest="true"/>
		<Panel id="DBVignettePanel" />
		<Panel id="TopRightPanel">
			<Button id="DCGSettingsButton" class="ControlIconButton SettingsButton" onactivate="DCGSettings();" />
			<Button id="DCGQuitButton" class="TopBarSmallButton" onactivate="DCGQuitGame();" onmouseover="AddStyle( TopBarQuitBackground, Hover )" onmouseout="RemoveStyle( TopBarQuitBackground, Hover )" />
		</Panel>		
    
    <Panel id="ArtifactLogo" />
		
		<Panel id="EverythingThatIsntTheBackground">
		  <Panel id="DBLeftPanel">
			  <DCGProfileCard id="ProfileCard" />
		    <Panel id="FriendMenuContainer" hittest="false">
				  <DCGFriendMenu id="FriendMenu" />
			  </Panel>
			  <DCGChat id="Chat" expanded="1" chatstyle="dashboard" oncancel="SetInputFocus( Dashboard )" />
		  </Panel>

      <DCGGauntlet id="Gauntlet"/>
      <DCGGauntletLeaderboard id="GauntletLeaderboard"/>
		  
		  <Panel id="MainMenuPanel">
        <Label id="PlayArtifactLabel" text="#DCG_MainMenu_Play" />
        <Panel class="MainMenuLabelContainer DefaultHidden" id="TournamentBracketRoot" onactivate="DCGShowTournamentBracket()">
          <Image class="MainMenuArrow" />
          <Label class="MainMenuLabel" text="#DCG_MainMenu_TournamentBracket" allowtextselection="false" />
        </Panel>
        <Panel class="MainMenuLabelContainer DefaultHidden" id="RegisterTournamentRoot" onactivate="DCGRegisterTournamentDeck()">
          <Image class="MainMenuArrow" />
          <Label class="MainMenuLabel" text="#DCG_MainMenu_RegisterTournament" allowtextselection="false" />
        </Panel>
        <Panel class="MainMenuLabelContainer DefaultHidden HideInLobby" id="TournamentMatchRoot" onactivate="DCGSetSearchForOpponent( k_EDCGMatchMode_Tournament )">
          <Image class="MainMenuArrow" />
          <Label class="MainMenuLabel" text="#DCG_MainMenu_TournamentMatch" allowtextselection="false" />
        </Panel>
        <Panel class="MainMenuLabelContainer DefaultHidden" id="AbandonMatchRoot" onactivate="DCGAbandonLobby()">
					<Image class="MainMenuArrow" />
					<Label class="MainMenuLabel" text="#DCG_MainMenu_AbandonMatch" allowtextselection="false" />
        </Panel>
        <Panel class="MainMenuLabelContainer DefaultHidden" id="ReconnectMatchRoot" onactivate="DCGReconnectLobby()">
					<Image class="MainMenuArrow" />
					<Label class="MainMenuLabel" text="#DCG_MainMenu_Reconnect" allowtextselection="false" />
        </Panel>
        <Panel class="MainMenuLabelContainer HideInLobby HideInPrivateLobby" id="GauntletRoot" onactivate="DCGToggleGauntletPanel()">
				  <Image class="MainMenuArrow" />
				  <Label class="MainMenuLabel" text="#DCG_MainMenu_Gauntlet" allowtextselection="false" />
			  </Panel>
			  <Panel class="MainMenuLabelContainer HideInLobby HideInPrivateLobby" id="AIMatchRoot" onactivate="DCGShowAIGameOptions()">
				  <Image class="MainMenuArrow" />
				  <Label class="MainMenuLabel" text="#DCG_MainMenu_Play" allowtextselection="false" />
			  </Panel>
			  <Panel class="MainMenuLabelContainer" onactivate="DCGShowDeckBuilder()">
				  <Image class="MainMenuArrow" />
				  <Label class="MainMenuLabel" text="#DCG_MainMenu_DeckBuilder" allowtextselection="false" />
			  </Panel>
      </Panel>		
		
      <!-- Note that z-order is changed dynamically! -->
      <Label id="BuildNumber" text="#DCG_Dashboard_BuildVersion" />

      <Panel id="MediaCover" hittest="true">
        <Panel id="ArtifactLogoFlash"/>
        <Panel class="MediaMatchButtonGroup">

          <!-- New Press Decks! -->          
          <Button class="MediaMatchButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaMatch('ADCFWukuQJeCAsBOF0BAbbeAaEBl0GGVUtnAaYBlqwBewE')">
            <Label text="#DCG_Dashboard_MediaMatch1"/>
          </Button>
          <Button class="MediaMatchButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaMatch('ADCFeE2uAIUpAFDArhdAafdAZC7AYKMZAFBOQG0AagBlaMBhz==')">
            <Label text="#DCG_Dashboard_MediaMatch2"/>
          </Button>
        
        </Panel>
        <Panel class="MediaColorButtonGroup">
          <Panel class="MediaBannerGroup">
            <Button id="MediaColorRed" class="MediaColorButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaColorToggle( 1 )">
              <Image src="s2r://panorama/images/main_menu/banner_red_psd.vtex" />
            </Button>
            <Button id="MediaColorGreen" class="MediaColorButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaColorToggle( 4 )">
              <Image src="s2r://panorama/images/main_menu/banner_green_psd.vtex" />
            </Button>
            <Button id="MediaColorBlue" class="MediaColorButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaColorToggle( 2 )">
              <Image src="s2r://panorama/images/main_menu/banner_blue_psd.vtex" />
            </Button>
            <Button id="MediaColorBlack" class="MediaColorButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaColorToggle( 3 )">
              <Image src="s2r://panorama/images/main_menu/banner_black_psd.vtex" />
            </Button>
          </Panel>
          
          <Panel class="MediaDeckGroup">
            
            <Panel class="HeroDisplay">
              <DCGScenePanel class="HeroImage" id="HeroImage0" scale_card="true" />
              <DCGScenePanel class="HeroImage" id="HeroImage1" scale_card="true" />
              <DCGScenePanel class="HeroImage" id="HeroImage2" scale_card="true" />
              <DCGScenePanel class="HeroImage" id="HeroImage3" scale_card="true" />
              <DCGScenePanel class="HeroImage" id="HeroImage4" scale_card="true" />
            </Panel>
          </Panel>
        </Panel>
        <Panel id="MediaGauntletStatsGroup">
          <Label class="ThankYouForPlayingLabel" text="#DCG_Dashboard_ThankYouForPlaying"/>
          <Button deckcode="ADCFc4tuQIBGI9BOF0BAa3dAYqHl2sCBgICS6oCXZKGUD==" class="PlayGame MediaMatchButton HumanMatch" onmouseover="DCGMediaMatchSound()" onactivate="DCGSetSearchForOpponentPax()">
            <Label class="MediaMatchWinsLabel" text="#DCG_Dashboard_MediaMatch_Wins"/>
            <Label class="MediaMatchWins" text="{i:PAXNumWins}"/>
            <Label class="MediaMatchText" text="#DCG_Dashboard_MediaMatch_Fight"/>
          </Button>
          <Button deckcode="ADCFc4tuQIBGI9BOF0BAa3dAYqHl2sCBgICS6oCXZKGUD==" class="PlayGame MediaMatchButton AIMatch" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaMatch2()">
            <Label class="MediaMatchWinsLabel" text="#DCG_Dashboard_MediaMatch_Wins"/>
            <Label class="MediaMatchWins" text="{i:PAXNumWins}"/>
            <Label class="MediaMatchText" text="#DCG_Dashboard_MediaMatch_FightAI"/>
          </Button>
          
        </Panel>
        <Panel class="MediaLanguageButtonGroup">
          <Button id="MediaLanguageSpanish" class="MediaLanguageButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaLanguage( 'spanish' )">
            <Image src="s2r://panorama/images/main_menu/language_spanish_png.vtex" />
          </Button>
          <Button id="MediaLanguageRussian" class="MediaLanguageButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaLanguage( 'russian' )">
            <Image src="s2r://panorama/images/main_menu/language_russian_png.vtex" />
          </Button>
          <Button id="MediaLanguageEnglish" class="MediaLanguageButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaLanguage( 'english' )">
            <Image src="s2r://panorama/images/main_menu/language_english_png.vtex" />
          </Button>
          <Button id="MediaLanguageSChinese" class="MediaLanguageButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaLanguage( 'schinese' )">
            <Image src="s2r://panorama/images/main_menu/language_schinese_png.vtex" />
          </Button>
          <Button id="MediaLanguageJapanese" class="MediaLanguageButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaLanguage( 'japanese' )">
            <Image src="s2r://panorama/images/main_menu/language_japanese_png.vtex" />
          </Button>
        </Panel>
      </Panel>
		
      <Button id="FriendsButton" onactivate="DCGFriendsButtonClicked();" onmouseover="UIShowTextTooltip( #DCG_Friends_WindowTitle )" onmouseout="UIHideTextTooltip()">
        <Panel id="FriendsButtonContents" />
      </Button>    
    </Panel>
    
    <!-- Make sure these are at the bottom to get the z-order right -->
		<DCGDashboardPopupManager id="DashboardPopupManager" onpopupsdismissed="SetInputFocus( Dashboard )" />

		<ToastManager id="ToastManager" hittest="false" toastduration="5.0s" maxtoastsvisible="3" />

		<!-- Note that z-order is set by .css.  The chat will move here, when the accept match popup is visible. -->
		<DCGContextMenuManager id="ContextMenuManager" />
		<DCGTooltipManager id="Tooltips" hittest="false" />

		<!-- Doesn't actually include the notifications, but we use its position to figure out where to show them -->
		<Panel id="SteamNotificationsPlaceholder" hittest="false" />
    
    <!-- Debug only visual aid -->
		<Image id="DebugForegroundOverlay" hittest="false" />

	</DCGDashboard>
</root>
