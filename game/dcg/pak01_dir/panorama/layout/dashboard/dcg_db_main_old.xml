<root>
	<styles>
		<include src="s2r://panorama/styles/base.vcss_c" />
		<include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard/dcg_db_main_old.vcss_c" />
	</styles>

	<DCGDashboard class="InitialDisplay NotOnTodayPage" hittest="false">

		<Panel id="DashboardCore">

			<!-- This block exists so that it is easier to work on main menu UI over RDP by blacking out the background. It should not be checked in uncommented -->
			<!-- <Panel id="FullBlackOverlay" hittest="false" /> -->

			<Panel id="DashboardBackground" hittest="false" />

			<Panel id="DashboardForeground" hittest="false">

				<PageManager id="DashboardPages" hittest="false" />

				<Panel id="DashboardPagesGuides" hittest="false">
					<Panel id="Guide4x3" hittest="false" />
				</Panel>

				<!-- clicking on the dashboard pages blocker closes the play tab -->
				<Button id="DashboardPagesBlocker" hittest="false" onactivate="DCGClosePlayTab()" />

				<!-- <DCGPlay id="Play" /> -->

				<Panel id="BottomBarSecondaryContainer" hittest="false">
					<Panel id="BottomBarSecondaryContent"  hittest="false" class="Hidden">
						<Panel id="BottomBarSecondaryTabs"  hittest="false" class="Hidden">
							<!-- Added dynamically: -->

							<!-- 
							<RadioButton class="SecondaryTabButton" text="Tab 1" />
							<Label class="SecondaryTabSeparator" text="/" />
							<RadioButton class="SecondaryTabButton" text="Tab 2" />
							<Label class="SecondaryTabSeparator" text="/" />
							<RadioButton class="SecondaryTabButton" text="Tab 3" />            
							-->
						</Panel>
						<!-- END OF BottomBarSecondaryTabs -->
					</Panel>
					<!-- END OF BottomBarSecondaryContent -->
				</Panel>
				<!-- END OF BottomBarSecondaryContainer -->

				<Panel id="BottomBar" hittest="false">
					<Panel id="BottomBarContent" hittest="false">

						<Panel id="BottomBarBackground" hittest="false"/>

						<Panel id="BottomBarMainContent" hittest="false">
							<Panel id="BottomBarMainNav" class="LeftRightFlow" hittest="false">
								<RadioButton id="BottomBarHome" backgroundcamera="shot_cameraA" backgroundcameralerptime="1.2" group="DashboardMainTabs" selected="true" onactivate="DCGShowDashboardHome()">
								</RadioButton>
								<RadioButton id="BottomBarCollection" backgroundcamera="shot_cameraB" backgroundcameralerptime="1.2" group="DashboardMainTabs" class="BottomBarMenuItem"  onactivate="DCGShowPrimaryTabPage( BottomBarCollection );">
									<Label class="TitleFont" text="#DCG_Dashboard_BottomBar_Collection" />
								</RadioButton>
								<RadioButton id="BottomBarPlay" backgroundcamera="shot_cameraB" backgroundcameralerptime="1.2" group="DashboardMainTabs" class="BottomBarMenuItem"  onactivate="DCGShowPrimaryTabPage( BottomBarPlay );">
									<Label class="TitleFont" text="#DCG_Dashboard_BottomBar_Play" />
								</RadioButton>
								<RadioButton id="BottomBarControlsLibrary" backgroundcamera="shot_cameraC" backgroundcameralerptime="1.2" group="DashboardMainTabs" class="BottomBarMenuItem" onactivate="DCGShowPrimaryTabPage( BottomBarControlsLibrary );">
									<Label class="TitleFont" text="#DCG_Dashboard_BottomBar_ControlsLibrary" />
								</RadioButton>
							</Panel>

						</Panel>
						<!-- END OF BottomBarMainContent -->
					</Panel>
					<!-- END OF BottomBarContent -->
				</Panel>
				<!-- END OF BottomBar -->

				<Panel id="TopBar" hittest="false">
					<Panel id="TopBarStatusBar">
						<Panel id="TopBarStatusMessageContainer">
							<Panel id="TopBarStatusSpinner" class="Spinner" />
							<Label id="TopBarStatusMessage" class="Hidden" />
						</Panel>
					</Panel>

					<Panel id="TopBarContent" hittest="false">

						<Panel id="TopBarBackground" hittest="false">
							<Panel id="TopBarQuitBackground" hittest="false" />
						</Panel>

						<Panel id="TopBarMainContent" hittest="false">

							<Panel id="GCConnectionStatus">
								<Label class="GCDisconnectedLabel" text="#DCG_Dashboard_LostGCConnection"/>
							</Panel>

							<Panel id="TopBarLeftButtons" class="LeftRightFlow Hidden">
							</Panel>

							<Panel class="BuildInfo" id="BuildInfoDisplay">
								<Label text="#DCG_Dashboard_BuildVersion" />
							</Panel>
							<Panel id="PlayerInfo">
								<DCGProfileCard id="ProfileCard" />
								<Panel class="ProfileStatsRow">
									<Button class="ButtonDark" id="BuyPacksButton" onactivate="DCGShowManagePacks()">
										<Label id="BuyPacksLabel" text="#DCG_Dashboard_BuyPacks"/>
										<Label id="OpenPacksLabel" text="#DCG_Dashboard_OpenPacks"/>
									</Button>
								</Panel>
								<Panel class="ProfileStatsRow">
									<Button class="ButtonDark" id="JoinLeagueButton" onactivate="DCGJoinPhantomLeague()">
										<Label id="PhantomLeagueLabel" text="#DCG_Dashboard_PhantomLeague"/>
									</Button>
								</Panel>
							</Panel>

							<Panel id="TopBarButtons">
								<Panel id="MOTDRoot">
									<Button id="MOTDShowButton" onactivate="DCGToggleMessageOfTheDay()" onmouseover="UIShowTextTooltip( #DCG_Dashboard_MOTDTooltip )" onmouseout="UIHideTextTooltip()"/>
									<Panel class="MOTDBody">
										<Panel id="MOTDContents">
											<!-- Dynamic Contents -->
										</Panel>
									</Panel>
								</Panel>
								<Button id="SubmitUserFeedback" onactivate="DCGShowSubmitFeedback( 'MainMenu', -1 )" onmouseover="UIShowTextTooltip( #DCG_UserFeedback_Tooltip )" onmouseout="UIHideTextTooltip()"/>
							</Panel>

							<!--
   						<DCGScenePanel id="CardPackScenePanel" map="maps/playercardpack" antialias="true" particleonly="false" camera="cardpackcamera" light="cardpacklight" renderdeferred="false" rotateonhover="true" yawmin="-16" yawmax="16" pitchmin="-5" pitchmax="8" acceleration="0.5" cardid="10020" panoramasurfacewidth="1024" panoramasurfaceheight="1024"/>
              -->

							<Panel id="TopBarRightButtons">
								<Panel class="TopBarReturnToGame">
									<Button id="ReturnToGameButton" class="TopBarSmallButton" onactivate="DCGReturnToGame();" />
									<Button id="ReturnToPostGameButton" class="TopBarSmallButton" onactivate="DCGReturnToPostGame();" />
								</Panel>
								<Button id="DCGSettingsButton" class="ControlIconButton SettingsButton" onactivate="DCGSettings();" />
								<Panel id="VerticalSeparator" />
								<Panel id="NavigationControls">
									<Button id="NavigateBackButton" onactivate="DCGNavigateBack()" />
									<Button id="NavigateForwardButton" onactivate="DCGNavigateForward()" />
								</Panel>
								<Button id="DCGQuitButton" class="TopBarSmallButton" onactivate="DCGQuitGame();"
										onmouseover="AddStyle( TopBarQuitBackground, Hover )"
										onmouseout="RemoveStyle( TopBarQuitBackground, Hover )" />
							</Panel>

							<Panel id="TopBarViolators" hittest="false">
								<!--
								<DOTAViolator id="TopBarStoreViolator" name="store_browse_violator" class="TopBarViolator Acknowledged" hittest="false">
									<Panel class="ViolatorContents" hittest="false">
										<Panel class="ViolatorLeftPoint" hittest="false" />
										<Label text="#DOTA_New" hittest="false" />
										<Panel class="ViolatorRightPoint" hittest="false" />
									</Panel>
								</DOTAViolator>
								-->
							</Panel>
						</Panel>

					</Panel>

				</Panel>
				<!-- END OF TopBar -->

			</Panel>
			<!-- END OF DashboardForeground -->

		</Panel>
		<!-- END OF DCGDashboard -->

		<!-- Note that z-order is changed dynamically! -->
		<Label id="BuildNumber" text="#DCG_Dashboard_BuildVersion" />
		<DCGChat id="Chat" expanded="1" chatstyle="dashboard" oncancel="SetInputFocus( DashboardPages )" />
		<Panel id="FriendMenuContainer" hittest="false">
			<DCGFriendMenu id="FriendMenu" />
		</Panel>
		<Button id="FriendsButton" onactivate="DCGFriendsButtonClicked();" onmouseover="UIShowTextTooltip( #DCG_Friends_WindowTitle )" onmouseout="UIHideTextTooltip()">
			<Panel id="FriendsButtonContents" />
		</Button>

		<!-- Make sure these are at the bottom to get the z-order right -->
		<DCGDashboardPopupManager id="DashboardPopupManager" onpopupsdismissed="SetInputFocus( DashboardPages )" />

		<ToastManager id="ToastManager" hittest="false" toastduration="5.0s" maxtoastsvisible="3" />

		<!-- Note that z-order is set by .css.  The chat will move here, when the accept match popup is visible. -->
		<DCGContextMenuManager id="ContextMenuManager" />
		<DCGTooltipManager id="Tooltips" hittest="false" />

		<!-- Doesn't actually include the notifications, but we use its position to figure out where to show them -->
		<Panel id="SteamNotificationsPlaceholder" hittest="false" />

		<Panel id="InitialDisplayPanelLogo" hittest="true"/>
		<Panel id="MediaCover" hittest="true">
			<Panel id="ArtifactLogoFlash"/>
			<Panel class="MediaMatchButtonGroup">
				<Button id="MediaMatch1" class="MediaMatchButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaMatch(0)">
					<Label text="#DCG_Dashboard_MediaMatch1"/>
				</Button>
				<Button id="MediaMatch2" class="MediaMatchButton" onmouseover="DCGMediaMatchSound()" onactivate="DCGMediaMatch(1)">
					<Label text="#DCG_Dashboard_MediaMatch2"/>
				</Button>
			</Panel>
		</Panel>

		<!-- Debug only visual aid -->
		<Image id="DebugForegroundOverlay" hittest="false" />
	</DCGDashboard>
</root>
