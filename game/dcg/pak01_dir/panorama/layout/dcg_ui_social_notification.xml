<root>
	<styles>
		<include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
		<include src="s2r://panorama/styles/dcg_ui_social.vcss_c" />
 	</styles>
 	<DCGSocialNotification class="Notification" hittest="false">
		<Panel id="NotificationBodyBlur" class="NotificationBody" hittest="false">
			<Image id="BlurBackgroundRect2ImageNotification" src="panel-background://NotificationBodyBlur" />
			<Panel id="BlurBackgroundRect2OverlayNotification" />
			<Panel class="NotificationBodyFlow">
				<DCGAvatarImage id="AvatarImage" class="NotificationIcon"/>
				<Image id="NotificationImage" class="NotificationIcon"/>
				<Panel class="NotificationContents">
					<Label id="NotificationHeader" class="NotificationsLabelBold" html="true"/>
					<Label id="NotificationDescription" class="NotificationsLabel" html="true"/>
				</Panel>
			</Panel>

		</Panel>
		<Panel id="NotificationActionBlur" class="NotificationAction">
			<Image id="BlurBackgroundRect2ImageNotification" src="panel-background://NotificationActionBlur" />
			<Panel id="BlurBackgroundRect2OverlayNotification" />	
			<Panel id="ActionButtons">
				<TextButton id="TakeActionButton" class="TakeActionButton" hittest="true"/>
				<TextButton id="DismissButton" class="TakeActionButton"  hittest="true"/>
			</Panel>
		</Panel>
	</DCGSocialNotification>
 </root>