<root>
	<styles>
	    <include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
		<include src="s2r://panorama/styles/deck_builder/deck_builder.vcss_c" />
		<include src="s2r://panorama/styles/catalogue/catalogue_card_library.vcss_c" />
	</styles>

	<CatalogueCard>
    <Panel class="MiniCard">
      <Panel class="CardBody">
        <Panel class="CardArtGroup">
          <Image id="CardArtMiniIcon"/>
          <Image id="CardArtHeroIcon"/>
        </Panel>
        <Panel class="CostGroup">
          <Panel id="ErrorIcon"/>
          <Panel class="CostAndIcon">
            <Label id="TypeLabel" text="{s:typeGlyph}" html="true"/>
            <Label id="CostLabel" text="{i:manaCost}"/>
            <Panel id="TypeIcon"/>
          </Panel>
        </Panel>
        <Panel class="TypeGroup">
          <Panel id="TypeIcon" />
        </Panel>
        <Panel class="CardNameGroup">
          <Panel class="CardNamePanel">
            <Label id="CardName" text="{s:cardName}" />
			      <Label id="IncludeName" text="#DCG_LibraryCard_IncludeCard" />
            <DCGMarketPrice id="CardCost"/>
			    </Panel>          
          <Image id="IncludedByCardArtMiniIcon"/>
        </Panel>
        <Panel class="RightGroup">
          <Panel class="StatsGroup">
            <Panel class="ArmorGroup">
              <Label id="ArmorLabel" text="{i:armor}" />
            </Panel>
            <Label id="AttackHealthLabel" text="#DCG_LibraryCard_AttackHealth"/>
          </Panel>
          <Label id="InstancesLabel" text="#DCG_LibraryCard_Count_xN"/>
					<Label id="TotalInstancesLabel" text="#DCG_LibraryCard_TotalCount" />
        </Panel>
      </Panel>
    </Panel>
	</CatalogueCard>
</root>
